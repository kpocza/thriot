<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/modernizr/modernizr.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-cookie/jquery.cookie.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/app/common/extensions.js"></script>
    <script src="~/app/common/angularbase.js"></script>
    <script src="~/config/siteRoots.js"></script>
    <script src="~/app/common/enums.js"></script>
    <script src="~/app/Management/InfoService.js"></script>
    <script src="~/app/Management/UserController.js"></script>
    <script src="~/app/Management/UrlInfoDirective.js"></script>

    @RenderSection("scripts", required: false)
</head>
<body ng-app="iot">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Thriot", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div ng-controller="UserStateController">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <div loading-indicator></div>
                    </li>
                    <li ng-if="!isLoggedIn()">
                        @Html.ActionLink("Register", "Register", "User")
                    </li>
                    <li ng-if="!isLoggedIn()">
                        @Html.ActionLink("Login", "Login", "User")
                    </li>
                    <li ng-if="isLoggedIn()">
                        <a href="#" ng-click="changePassword()">chgpwd</a>
                    </li>
                    <li ng-if="isLoggedIn()">
                        <a href="#" ng-click="gotoapp()">Main View</a>
                    </li>
                    <li ng-if="isLoggedIn()">
                        <a href="#" ng-click="logoff()">Logoff</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <div system-messages></div>
        @RenderSection("fullwidth", required: false)
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Thriot</p>
        </footer>
    </div>
</body>
</html>
