@{
    ViewBag.Title = "Reset password";
}

<h2>Reset password</h2>

<form ng-submit="resetPassword()" ng-controller="UserController">
    <label for="passwd" class="labelwidth">Password</label><input type="password" name="passwd" ng-model="userInfo.password" autofocus /><br />
    <input type="submit" value="Reset password" />
</form>
