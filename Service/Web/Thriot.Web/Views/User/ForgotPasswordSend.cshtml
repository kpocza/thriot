@{
    ViewBag.Title = "Send forgot password reset email";
}

<h2>Send forgot password reset email</h2>

<form ng-submit="sendForgotPasswordEmail()" ng-controller="UserController">
    <label for="email" class="labelwidth">Email</label><input type="email" name="email" ng-model="userInfo.email" autofocus /><br />
    <input type="submit" value="Send forgot password reset email" />
</form>
