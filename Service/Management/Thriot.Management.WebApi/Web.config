<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=301879
  -->
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection,Microsoft.Practices.Unity.Configuration" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
  </appSettings>

  <connectionStrings>
    <add name="ManagementConnection" connectionString="UseDevelopmentStorage=true" />
  </connectionStrings>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>

  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">
    <container>
      <register type="Thriot.Management.Model.Operations.IUserOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.UserOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Management.Model.Operations.ICompanyOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.CompanyOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Management.Model.Operations.IServiceOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.ServiceOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Management.Model.Operations.INetworkOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.NetworkOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Management.Model.Operations.IDeviceOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.DeviceOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Management.Model.Operations.ISettingOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Azure.SettingOperations, Thriot.Management.Operations.Azure" />
      <register type="Thriot.Framework.Azure.DataAccess.ICloudStorageClientFactory, Thriot.Framework.Azure" mapTo="Thriot.Framework.Azure.DataAccess.AzureCloudStorageClientFactory, Thriot.Framework.Azure" />
      <register type="Thriot.Framework.DataAccess.IConnectionParametersResolver, Thriot.Framework" mapTo="Thriot.Framework.DataAccess.LocalConnectionParametersResolver, Thriot.Framework" />
      <register type="Thriot.Management.Services.IAuthenticationContext, Thriot.Management.Services" mapTo="Thriot.Management.WebApi.Auth.WebAuthenticationContext, Thriot.Management.WebApi" />
      <register type="Thriot.Management.Services.ISettingProvider, Thriot.Management.Services" mapTo="Thriot.Management.Services.SettingProvider, Thriot.Management.Services">
        <lifetime type="singleton" />
      </register>
      <register type="Thriot.Management.Services.ICapabilityProvider, Thriot.Management.Services" mapTo="Thriot.Management.Services.CapabilityProvider, Thriot.Management.Services" />
      <register type="Thriot.Management.Services.IEnvironmentPrebuilder, Thriot.Management.Services" mapTo="Thriot.Management.Services.EnvironmentPrebuilder, Thriot.Management.Services" />
      <register type="Thriot.Management.Services.IMailer, Thriot.Management.Services" mapTo="Thriot.Management.WebApi.WebFunctions.Mailer, Thriot.Management.WebApi" />
      <register type="Thriot.ServiceClient.TelemetrySetup.ITelemetryDataSinkSetupService, Thriot.ServiceClient.TelemetrySetup" mapTo="Thriot.ServiceClient.TelemetrySetup.TelemetryDataSinkSetupService, Thriot.ServiceClient.TelemetrySetup">
        <lifetime type="singleton" />
      </register>
      <register type="Thriot.ServiceClient.Messaging.IMessagingService, Thriot.ServiceClient.Messaging" mapTo="Thriot.ServiceClient.Messaging.MessagingService, Thriot.ServiceClient.Messaging">
        <lifetime type="singleton" />
      </register>
    </container>
  </unity>

  <nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets async="true">
      <target name="logfile" xsi:type="File" layout="${longdate} ${level} ${logger} ${message}" keepFileOpen="true" fileName="c:/Thriot/log/management/${shortdate}.log" />
    </targets>

    <rules>
      <logger name="*" minLevel="Trace" writeTo="logfile" />
    </rules>
  </nlog>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" culture="neutral" publicKeyToken="30ad4fe6b2a6aeed" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Net.Http.Formatting" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.2.0" newVersion="5.2.2.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Http" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.WindowsAzure.Storage" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.3.0.0" newVersion="4.3.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Data.Edm" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.6.2" newVersion="5.6.2" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Data.Services.Client" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.6.2" newVersion="5.6.2" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Data.OData" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.6.2" newVersion="5.6.2" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.1.0" newVersion="3.0.1.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Cors" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <system.webServer>

    <security>
      <requestFiltering allowDoubleEscaping="true" />
    </security>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
</configuration>
