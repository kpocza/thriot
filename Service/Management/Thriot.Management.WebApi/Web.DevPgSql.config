<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" xdt:Transform="Insert" />
  </configSections>
  
  <connectionStrings>
    <add name="ManagementConnection" connectionString="Server=127.0.0.1;Port=5432;Database=Thriot;User Id=thriot;Password=thriot;" providerName="Npgsql" xdt:Transform="Replace" xdt:Locator="Match(name)" />
  </connectionStrings>

  <entityFramework xdt:Transform="Insert">
    <providers>
      <provider invariantName="Npgsql" type="Npgsql.NpgsqlServices, Npgsql.EntityFramework"></provider>
    </providers>
    <defaultConnectionFactory type="Npgsql.NpgsqlConnectionFactory, Npgsql" />
  </entityFramework>

  <system.data xdt:Transform="Insert">
    <DbProviderFactories>
      <remove invariant="Npgsql" />
      <add name="Npgsql Data Provider" invariant="Npgsql" support="FF" description=".Net Framework Data Provider for Postgresql" type="Npgsql.NpgsqlFactory, Npgsql" />
    </DbProviderFactories>
  </system.data>

  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">
    <container>
      <register type="Thriot.Management.Model.Operations.IUserOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.UserOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Model.Operations.ICompanyOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.CompanyOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Model.Operations.IServiceOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.ServiceOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Model.Operations.INetworkOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.NetworkOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Model.Operations.IDeviceOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.DeviceOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Model.Operations.ISettingOperations, Thriot.Management.Model" mapTo="Thriot.Management.Operations.Sql.SettingOperations, Thriot.Management.Operations.Sql" xdt:Transform="Replace" xdt:Locator="Match(type)" />
      <register type="Thriot.Framework.Azure.DataAccess.ICloudStorageClientFactory, Thriot.Framework.Azure" xdt:Transform="Remove" xdt:Locator="Match(type)" />
      <register type="Thriot.Management.Operations.Sql.DataAccess.IManagementUnitOfWorkFactory, Thriot.Management.Operations.Sql" mapTo="Thriot.Management.Operations.Sql.DataAccess.PgSql.ManagementUnitOfWorkFactoryPgSql, Thriot.Management.Operations.Sql" xdt:Transform="Insert" />
    </container>
  </unity>
</configuration>